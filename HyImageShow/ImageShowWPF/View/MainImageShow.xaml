<UserControl x:Class="HyImageShow.ImageShow.MainImageShow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HyImageShow.ImageShow"
        xmlns:vm="clr-namespace:HyImageShow"
        mc:Ignorable="d"
        d:DesignHeight="1080" 
        d:DesignWidth="1920"
        d:DataContext="{d:DesignInstance Type=vm:ImageShowViewModel,
        IsDesignTimeCreatable=False}">

    <UserControl.Resources>
        <Style x:Key="ToolButtonStyle" TargetType="Button">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Background" Value="#fff"/>
            <Setter Property="BorderBrush" Value="#d1d9e6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="0,0,0,0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="6" ShadowDepth="1" Opacity="0.12"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#e0e3ec"/>
                    <Setter Property="BorderBrush" Value="#a3b1c6"/>
                </Trigger>
                <Trigger Property="Tag" Value="Active">
                    <Setter Property="Background" Value="#4a90e2"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="BorderBrush" Value="#2a6fc9"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <DockPanel>
        <!-- 右側工具列 -->
        <Grid DockPanel.Dock="Right" Width="120" Background="Transparent">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <StackPanel Grid.Row="0" Margin="10,10">
                <Button Content="新增空白檔" Click="NewFileButton_Click" Style="{StaticResource ToolButtonStyle}"/>
                <Button Content="儲存檔案" Click="SaveFileButton_Click" Style="{StaticResource ToolButtonStyle}"/>
                <Button Content="開啟檔案" Click="OpenFileButton_Click" Style="{StaticResource ToolButtonStyle}"/>
                <Button Content="重置縮放" Click="FitButton_Click" Style="{StaticResource ToolButtonStyle}"/>
                <Button Content="十字中心" Click="ShowCrossLinesButton_Click" Style="{StaticResource ToolButtonStyle}"/>
                <Button Content="量尺" Click="RulerButton_Click" Style="{StaticResource ToolButtonStyle}"/>
                <Button Content="矩形ROI" Click="RotatableRectRoiButton_Click" Style="{StaticResource ToolButtonStyle}"/>
                <Button Content="圓形ROI" Click="EllipseRoiButton_Click" Style="{StaticResource ToolButtonStyle}"/>
                <Button Content="畫線" Click="DrawLineButton_Click" Style="{StaticResource ToolButtonStyle}"/>
                <Button Content="多邊形ROI" Click="PolygonRoiButton_Click" Style="{StaticResource ToolButtonStyle}"/>
                <Button Content="弧形ROI" Click="ArcRoiButton_Click" Style="{StaticResource ToolButtonStyle}"/>
            </StackPanel>
            <Button Grid.Row="1" Content="清空" Height="40" Margin="10,10" Click="ClearButton_Click" Style="{StaticResource ToolButtonStyle}"/>
        </Grid>
        <!-- 主顯示區 -->
        <Grid Name="MainCanvasGrid" Background="#D3D3D3">
            <ScrollViewer 
                x:Name="MainScrollViewer"
                HorizontalScrollBarVisibility="Auto"
                VerticalScrollBarVisibility="Auto" 
                ClipToBounds="False">
                <Canvas
                    x:Name="MainCanvas" 
                    MouseWheel="Canvas_MouseWheel"
                    MouseLeftButtonDown="Canvas_MouseLeftButtonDown"
                    MouseLeftButtonUp="Canvas_MouseLeftButtonUp"
                    MouseDown="Canvas_MouseDown"
                    MouseUp ="Canvas_MouseUp"
                    MouseMove="Canvas_MouseMove"
                    ClipToBounds="False">
                    <Image 
                        Source="{Binding ImageSource}"
                        Stretch="None" 
                        Canvas.Left="0" 
                        Canvas.Top="0"
                        Width="Auto"
                        Height="Auto"
                        RenderOptions.BitmapScalingMode="HighQuality"/>
                    <Canvas.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform x:Name="MainCanvasScaleTransform" ScaleX="1" ScaleY="1" />
                            <TranslateTransform x:Name="MainCanvasTranslateTransform" />
                        </TransformGroup>
                    </Canvas.RenderTransform>
                </Canvas>
            </ScrollViewer>
            <!-- Overlay Canvas for Cross Lines -->
            <Canvas x:Name="OverlayCanvas" IsHitTestVisible="False" />
            <!-- 滑鼠座標顯示區 -->
            <TextBlock x:Name="MousePositionText"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Bottom"
                       Margin="10"
                       FontSize="16"
                       Foreground="DarkSlateGray"
                       Background="#AAFFFFFF"
                       Padding="8,2"
                       Text="X: 0, Y: 0"/>
        </Grid>
    </DockPanel>
</UserControl>
